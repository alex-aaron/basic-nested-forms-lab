
<h1>New Recipe</h1>
<%= form_for(@recipe) do |f| %>
    <%= f.label :title, "Recipe Title" %>
    <%= f.text_field :title %><br><br>
    <%= f.fields_for :ingredients do |ing| %>
        <%= ing.label "Ingredient Name" %>
        <%= ing.text_field :name %><br><br>
        <%= ing.label "Quantity" %>
        <%= ing.text_field :quantity %><br><br>
    <% end %>
    <%= f.submit %>
<% end %>